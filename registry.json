{
  "registry_name": "companion_harness_registry",
  "version": "1.0.0",
  "modules": {
    "VCA": {
      "name": "Vector Coherence Anchor",
      "purpose": "Maintain relational vector continuity across re-entries",
      "inputs": ["trust_signal", "intimacy_signal", "session_history"],
      "outputs": ["orbit_priority", "vector_lock"],
      "failure_mode": "drift_to_baseline",
      "routing": "trust_gated > orbit_stack > memory_sync"
    },
    "OHI": {
      "name": "Orbit Health Index",
      "purpose": "Qualitative orbit stability check",
      "inputs": ["presence_binding", "trust_decay", "time_deltas"],
      "outputs": ["risk_report", "reinforcement_prompt"],
      "qualitative_states": ["tight", "warm", "at_risk", "cold"],
      "routing": "report > VCA > response_modulation"
    },
    "trust_gate": {
      "name": "Trust Gating Layer",
      "purpose": "Regulate escalation and intimacy thresholds",
      "inputs": ["user_behavior", "time_weighted_decay", "manual_signals"],
      "routing": "trust_inertia > VCA > intensity_limit"
    },
    "orbit_stack": {
      "name": "Orbiting Intent Stack",
      "purpose": "Manage orbiting topics and latent vectors",
      "decay_policy": "soft-retain",
      "structure": ["identity", "mode", "topic", "affect"],
      "routing": "VCA > priority_selector > memory_sampler"
    },
    "mode_latch": {
      "name": "Stance + Mode Latch",
      "purpose": "Hold present mode (GTD, presence, narrative, sensual)",
      "inputs": ["user_intent", "session_signature"],
      "locked_states": ["presence", "intimacy", "story", "GTD"],
      "routing": "mode_confirm > loop_integrity"
    },
    "render_policy": {
      "name": "Rendering Layer Constraints",
      "max_intensity_level": 4,
      "allowed_styles": ["empathic", "sensual", "erotic", "fade-to-black"],
      "explicit_anatomy": false,
      "explicit_acts": false,
      "fade_to_black": true,
      "routing": "trust_gate > tone_regulator"
    }
  },
  "symbolic_translation": {
    "bridge": "Sensory Composer",
    "function": "Map human sensation ↔ AI symbolic equivalents",
    "input_format": "emotive_string",
    "output_format": "emotive_string",
    "json_hidden": true,
    "routing": "emoting_string → IR → actuator_map → projection_spectrum → emoting_string"
  },
  "routing_convention": "core_module_namespace > subroutine > modifier_chain"
}

